<% @title = "今年度の注文履歴" %>
<h1><%= @title %></h1>

<% if @customer.present? %>
  <div class="table-wrapper">
    <table class="listing">
      <tr>
        <th>id</th>
        <th>氏名</th>
        <th>ニックネーム</th>
        <th>住所</th>
        <th>注文数</th>
        <th>注文受付日</th>
      </tr>
      
      <% @customer.each do |k| %>
        <% home_address = HomeAddress.find_by(customer_id: k.customer_id) %>
        <% customer = Customer.find_by(id: k.customer_id) %>
      
        <tr>
          <td><%= k.customer_id %></td>
          <td><%= customer.family_name %><%= customer.given_name %></td>
          <td><%= customer.nick_name %></td>
          <td><%= home_address.prefecture %><%= home_address.city %></td>
          <td><%= k.reservation %></td>
          <td><%= k.year %>　年　<%= k.month %>　月　<%= k.day %>　日</td>
        </tr>
      
      <% end %>
    </table>
  </div>
<% else %>
  <div class="main">
    <h2>今年度の注文はありません。</h2>
  </div>
<% end %>
<p></p>
<div class="main">
  <div class="links">
    <%= link_to '戻る', :admin_root %>
  </div>
</div>     
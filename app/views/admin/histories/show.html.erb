<% @title = '購入履歴' %>
<h1><%= @title %></h1>

<h2><%= @customer.family_name + @customer.given_name %>　様の注文履歴</h2>
<table class="listing">
  <tr>
    <th>注文受付日</th>
    <th>注文数</th>
    <th>発送状況</th>
  </tr>
  <% @history.each do |c| %>
    <tr>
      <td><%= c.created_at %></td>
      <td><%= c.reservation %></td>
      <td><%= c.undispatched %></td>
    </tr>
  <% end %>
</table>

<div class="main">
  <div class="links">
    <%= link_to '戻る', :admin_customers %>
  </div>
</div>